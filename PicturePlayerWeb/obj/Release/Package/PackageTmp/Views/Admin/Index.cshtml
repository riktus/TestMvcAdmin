@model IEnumerable<PicturePlayerWeb.Entity.PictureElement>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading"><h3>Все изображения</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-left">
                    Название
                </th>
                <th class="text-left">
                    Время
                </th>
                <th class="text-center">
                    Действие
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-left">
                        @Html.ActionLink(item.Name, "Edit", new { pictureId = item.Id })
                    </td>
                    <td class="text-left">
                        @item.StartTime
                    </td>
                    <td class="text-center">
                        @using(Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("pictureId", item.Id)
                            <input type="submit" class="btn btn-default btn-xs" value="Удалить" />
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        <div class="text-center">
            @Html.ActionLink("Добавить новый элемент", "Create", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>

